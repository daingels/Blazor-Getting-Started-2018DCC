@page "/counter"
@page "/counter/{IncrementAmount:int}"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

@functions {
int currentCount = 0;

[Parameter]
private int IncrementAmount { get; set; } = 2;

void IncrementCount()
{
    currentCount += IncrementAmount;
}
}
